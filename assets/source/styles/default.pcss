/* Основные стили */
html {
  margin: 0;
  background-color: #f2f2f2;
  font-family: 'PT Sans', 'Arial', sans-serif;
}

body {
  margin: 0;
  background-color: #f2f2f2;
  font-family: 'PT Sans', 'Arial', sans-serif;
}

.wrapper {
  position: relative;
  width: 1200px;
  margin: 0 auto;
  box-shadow: 0 0 20px rgba(0,0,0,0.2);
  background-color: white;
  text-transform: uppercase;

  @media (--medium) {
    width:768px;
  }
  @media (--phone) {
    width:100%;
  }
}
