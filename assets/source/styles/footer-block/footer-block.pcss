.footer-block {
  vertical-align: top;
  display: inline-block;
  width: 33.33333%;
  height: 75px;
  text-align: center;
  padding-top: 44px;
  font-size: 21px;
  line-height: 26px;
  font-weight: bold;

  a{
    color: inherit;
    text-decoration: none;
  }

}
.footer-block:nth-child(2) {
  padding-top: 34px;
}
.footer-block:nth-child(3){
  font-size: 13px;
  font-weight: 100;
}